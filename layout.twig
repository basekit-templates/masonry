<!doctype html>
<html class="no-js" lang="{{ page.seoLang }}">

<head>
	<meta charset="utf-8" />
	<title>{{ page.title }}</title>
	<meta name="keywords" content="{{ page.keywords }}" />
	<meta name="description" content="{{ page.description }}" />

	{% if site.favicon %}
		<link rel="icon" href="{{ site.favicon['favicon'] }}" type="image/x-icon" />
		<link rel="SHORTCUT ICON" href="{{ site.favicon['thumbnail'] }}?v={{ "now"|date("U") }}" type="image/x-icon" />
	{% endif %}
	<meta name="viewport" content="width=device-width,initial-scale=1">

	{% include basekit.headScript %}

	<script src="//ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>
<body class="{{ page.backgroundClass }}" {{ isV10sSite ? 'id="migrated-site"' : '' }}>

	{% block content %}
	{% endblock %}

    {% include basekit.bodyScript %}

    <!-- Fast Click -->
    <script src="{{ asset('js/fastclick.js')}}"></script>

	<!-- Menu Navigation Toggle -->
    <script>
		$(function() {
		    FastClick.attach(document.body);
		});

    	// Toggles class open to display/hide the whole navigation
    	$( ".navigation-toggle" ).click(function() {
  			$( ".navigation-body" ).toggleClass( "open" );
		});

    	// Toggles class open to display/hide folders
		$( ".navigation-item.folder" ).each(function() {
			$( this ).click(function() {
	  			$( this ).toggleClass( "open" );
			});
		});
	</script>

	{% block scripts %}
	{% endblock %}

</body>
</html>
